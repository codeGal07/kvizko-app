<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IzbranKvizActivity">


    <TextView
        android:id="@+id/ImeKviza"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:gravity="center_horizontal"
        android:text="Moji kvizi"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vprasanjeAliOdgovor"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="312dp"
        android:layout_height="233dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button"
        android:onClick="shiftOdgovorVprasanje"
        android:text="Moji kvizi"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/vprasanjeAliOdgovor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImeKviza"
        app:layout_constraintVertical_bias="0.224" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vprasanjeAliOdgovor2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/button"
        android:onClick="updateVpasanje"
        android:text="Naprej"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelVprasanjeOdgovor"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:layout_marginTop="116dp"
        android:elevation="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImeKviza" />

    <TextView
        android:id="@+id/kateroOdKolkih"
        android:layout_width="76dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="3/5"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/vprasanjeAliOdgovor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vprasanjeAliOdgovor"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>